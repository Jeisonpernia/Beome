        <record model="ir.ui.view" id="view_property_image_form">
            <field name="name">property.image.form</field>
            <field name="model">property.image</field>
            <field name="arch" type="xml">
                <form string="Property Images">
                    <div class="row o_website_sale_image_modal">
                        <div class="col-md-6 col-xl-5">
                            <div class="oe_title">
                                <label class="small text-muted" for="name" string="Image Name"/>
                                <h2><field name="name" placeholder="Image Name" required="True"/></h2>
                                <field name="flat_mates_id" invisible="1"/>
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-7 text-center o_website_sale_image_modal_container">
                            <field name="image" widget="image"/>
                        </div>
                    </div>
                </form>
            </field>
        </record>


