        <record id="housemates_form_view" model="ir.ui.view">
            <field name="name">house.mates.form</field>
            <field name="model">house.mates</field>
            <field name="arch" type="xml">
                <form string="Housemates" name="housemates">
                    <sheet>
                        <group>
                            <group>
                            <field name="listing_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="name"/>
                            <field name="property_type" String="Property type" widget="many2many_tags" options="{'no_create_edit':True}"/>
                            <field name="user_id" String="User" options="{'no_create_edit':True}"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options='{"no_create": True}'/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                    <field name="latitude" placeholder="Latitude" readonly="1"/>
                                    <field name="longitude" placeholder="Longitude" readonly="1"/>
                                </div>
                            </group>
                            <group>
                                <field name="total_bathrooms_id"/>
                                <field name="total_bedrooms_id"/>
                                <field name="total_no_flatmates_id"/>
                                <field name="type"/>
                                <field name="pref"/>
                                <field name="place_for"/>
                                <field name="is_short_list"/>
                            </group>
                        </group>

                        <notebook>
                            <page name='about rooms' string="About the room(s)">
                                <field name="rooms_ids">
                                    <tree editable="bottom">
                                        <field name="room_type_id"/>
                                        <field name="room_furnishing_id"/>
                                        <field name="bath_room_type_id"/>
                                    </tree>
                                </field>
                            </page>

                            <page name='about person' string="About person">
                                <field name="person_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="age"/>
                                        <field name="gender"/>
                                    </tree>
                                </field>
                            </page>

                            <page name='necessity' string="Necessity">
                                <h3>Necessity</h3>
                                <group col="4">
                                    <field name="internet_id"/>
                                    <field name="parking_id"/>
                                </group>
                            </page>
                            <page name='rent agreement details' string="Rent, Agreement &amp; Details">
                            <h3>Budget &amp; Date Available</h3>
                            <group col="4">
                                <field name="weekly_budget"/>
                                <field name="avil_date"/>
                            </group>
                            <h3>Bond &amp; Details</h3>
                            <group col="4">
                                <field name="bond_id" options="{'no_create_edit':'True'}"/>
                                <field name="bill_id" options="{'no_create_edit':'True'}"/>
                                <field name="min_len_stay_id" options="{'no_create_edit':'True'}"/>
                                <field name="max_len_stay_id" options="{'no_create_edit':'True'}"/>
                            </group>
                        </page>
                                <page name='accepting employment_status lifestyle' string="Accepting, Employment Status &amp; Lifestyle ">
                                <h3>Accepting</h3>
                            	<group col="4">
                                    <field name="backpackers"/>
                                    <field name="students"/>
                                    <field name="smokers"/>
                                    <field name="LGBTI"/>
                                    <field name="fourty_year_old"/>
                                    <field name="children"/>
                                    <field name="pets"/>
                                    <field name="retirees"/>
                                    <field name="on_welfare"/>
                            	</group>

                                <h3>Employment Status</h3>
                            	<group col="4">
                                    <field name="f_full_time"/>
                                    <field name="f_part_time"/>
                                    <field name="f_working_holiday"/>
                                    <field name="f_retired"/>
                                    <field name="f_unemployed"/>
                                    <field name="f_backpacker"/>
                                    <field name="f_student"/>
                            	</group>

                                <h3>Lifestyle</h3>
                            	<group col="4">
                                    <field name="fsmoker"/>
                                    <field name="flgbti"/>
                                    <field name="fpets"/>
                                    <field name="fchildren"/>
                            	</group>
                            </page>

                            <page name="images" string="Property Images">
                                <group name="property_extra_images" string="Extra Images">
                                    <field name="property_image_ids" class="o_website_sale_image_list"
                                           context="{'default_name': name, 'default_flat_mates_id': active_id}"
                                           nolabel="1">
                                        <kanban string="Property Images" class="o_attachments_previews">
                                            <field name="id"/>
                                            <field name="name"/>
                                            <field name="image"/>
                                            <templates>
                                                <t t-name="kanban-box">
                                                    <div class="o_attachment oe_kanban_global_click o_website_sale_image_card">
                                                        <div class="o_attachment_wrap">
                                                            <div class="o_image_box">
                                                                <div class="o_attachment_image"
                                                                     t-attf-style="background-image:url({{kanban_image('property.image', 'image', record.id.raw_value)}});"/>
                                                                <div t-attf-class="o_image_overlay"
                                                                     t-att-title="record.name.value"/>
                                                                <div class="o_website_sale_image_card_title"
                                                                     t-att-title="record.name.value">
                                                                    <field name="name"/>
                                                                </div>
                                                            </div>

                                                            <t t-set="size" t-value="[record.image.value][0]"/>
                                                            <t t-set="size_status" t-value="'normal'"
                                                               t-if="size.indexOf('Bytes') !== -1 or ( size.indexOf('Kb') !== -1 and size[2]=='.')"/>
                                                            <t t-set="size_status" t-value="'warning'"
                                                               t-elif="( size.indexOf('Kb') !== -1 and size[3]=='.')"/>
                                                            <t t-set="size_status" t-value="'danger'" t-else=""/>
                                                            <t t-set="message" t-value="'Acceptable file size'"
                                                               t-if="size_status == 'normal'"></t>
                                                            <t t-set="message"
                                                               t-value="'Huge file size. The image should be optimized/reduced.'"
                                                               t-elif="size_status == 'warning'"></t>
                                                            <t t-set="message"
                                                               t-value="'Optimization required! Reduce the image size or increase your compression settings.'"
                                                               t-else=""></t>

                                                            <span t-attf-class="o_website_sale_image_card_size badge badge-#{size_status}"
                                                                  t-att-title="message">
                                                                <t t-esc="record.image.value"/>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>
                                </group>
                            </page>

                        <page name='description' string="Description">
                            <group>
                                <div>
                                    <label for="description_about_property" string="About Yourself/About Property"/>
                                    <field name="description_about_property"/>
                                </div>
                                <div>
                                    <label for="description_about_user" string="About Flatmates"/>
                                    <field name="description_about_user"/>
                                </div>
                            </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="housemates_tree_view" model="ir.ui.view">
            <field name="name">house.mates.tree</field>
            <field name="model">house.mates</field>
            <field name="arch" type="xml">
                <tree string="Housemates" name="housemates">
                    <field name="name"/>
