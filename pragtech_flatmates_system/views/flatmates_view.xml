<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="flatmates_form_view" model="ir.ui.view">
            <field name="name">flat.mates.form</field>
            <field name="model">flat.mates</field>
            <field name="arch" type="xml">
                <form string="FlatMates" name="flatmates">
                    <sheet>

                        <group>
                            <group>
                                <field name="accommodation_type" required="1"/>
                                <field name="type" attrs="{'invisible': [('accommodation_type','!=','rooms_in_an_existing_sharehouse')],'required':[('accommodation_type','=', 'rooms_in_an_existing_sharehouse')]}" />
                                <!--<field name="accommodation_type_id" required="1"/>-->
                                <!--<field name="property_type_id"/>-->
                                <field name="name" required="0" invisible="1"/>
                                <!--<field name="partner_id"/>-->
                                <field name="user_id"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options='{"no_create": True}'/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                </div>
                            </group>
                            <group>
                                <field name="parking_id" required="1"/>
                                <field name="internet_id" required="1"/>
                                <field name="total_no_flatmates_id" required="1"/>
                                <field name="pref"/>
                                <!--<field name="flatmate_preference_id"/>-->
                                <field name="total_bedrooms_id" required="1"/>
                                <field name="total_bathrooms_id" required="1"/>
                            </group>
                            <!--<field name="type" attrs="{'invisible': [('accommodation_type','!=','rooms_in_an_existing_sharehouse')],'required':[('accommodation_type','=', 'rooms_in_an_existing_sharehouse')]}" />-->
                        </group>
                        <group>
                            <group>

                            </group>
                        </group>

                        <notebook>
                            <page name='about rooms' string="About the room(s)">
                                <field name="rooms_ids">
                                    <tree editable="bottom">
                                        <field name="room_type_id"/>
                                        <field name="room_furnishing_id"/>
                                        <field name="bath_room_type_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page name='bills and bond' string="Rent, Bond and Bills">
                                <group>
                                    <field name="weekly_rent"/>
                                    <field name="bond_id"/>
                                    <field name="bill_id"/>
                                </group>
                            </page>
                            <page name='room aviability' string="Room Avaibility">
                                <group>
                                    <field name="avil_date"/>
                                    <field name="min_len_stay_id"/>
                                    <field name="max_len_stay_id"/>
                                </group>
                            </page>
                            <page name="images" string="Property Images">
                                <group name="property_extra_images" string="Extra Images">
                                    <field name="property_image_ids" class="o_website_sale_image_list"
                                           context="{'default_name': name, 'default_flat_mates_id': active_id}"
                                           nolabel="1">
                                        <kanban string="Property Images" class="o_attachments_previews">
                                            <field name="id"/>
                                            <field name="name"/>
                                            <field name="image"/>
                                            <templates>
                                                <t t-name="kanban-box">
                                                    <div class="o_attachment oe_kanban_global_click o_website_sale_image_card">
                                                        <div class="o_attachment_wrap">
                                                            <div class="o_image_box">
                                                                <div class="o_attachment_image"
                                                                     t-attf-style="background-image:url({{kanban_image('property.image', 'image', record.id.raw_value)}});"/>
                                                                <div t-attf-class="o_image_overlay"
                                                                     t-att-title="record.name.value"/>
                                                                <div class="o_website_sale_image_card_title"
                                                                     t-att-title="record.name.value">
                                                                    <field name="name"/>
                                                                </div>
                                                            </div>

                                                            <t t-set="size" t-value="[record.image.value][0]"/>
                                                            <t t-set="size_status" t-value="'normal'"
                                                               t-if="size.indexOf('Bytes') !== -1 or ( size.indexOf('Kb') !== -1 and size[2]=='.')"/>
                                                            <t t-set="size_status" t-value="'warning'"
                                                               t-elif="( size.indexOf('Kb') !== -1 and size[3]=='.')"/>
                                                            <t t-set="size_status" t-value="'danger'" t-else=""/>
                                                            <t t-set="message" t-value="'Acceptable file size'"
                                                               t-if="size_status == 'normal'"></t>
                                                            <t t-set="message"
                                                               t-value="'Huge file size. The image should be optimized/reduced.'"
                                                               t-elif="size_status == 'warning'"></t>
                                                            <t t-set="message"
                                                               t-value="'Optimization required! Reduce the image size or increase your compression settings.'"
                                                               t-else=""></t>

                                                            <span t-attf-class="o_website_sale_image_card_size badge badge-#{size_status}"
                                                                  t-att-title="message">
                                                                <t t-esc="record.image.value"/>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>
                                </group>
                            </page>
                            <page name='property_accepting' string="Accepting">
                            	<group>
                            		<field name="accepting_ids" widget="many2many_tags"/>
                            	</group>
                            </page>
                            <page name='property_description' string="Property Description">
                                <group col="4">
                                    <div>
                                        <label for="description_about_property" string="About Flatmates"/>
                                        <field name="description_about_property"/>
                                    </div>
                                     <div>
                                        <label for="description_about_user" string="About Property"/>
                                        <field name="description_about_user"/>
                                    </div>
                                </group>
                            </page>
                        </notebook>
                    </sheet>

                </form>
            </field>
        </record>

        <record id="flatmates_tree_view" model="ir.ui.view">
            <field name="name">flat.mates.tree</field>
            <field name="model">flat.mates</field>
            <field name="arch" type="xml">
                <tree string="FlatMates" name="flatmates">
                    <!--<field name="accommodation_type_id"/>-->
                    <!--<field name="property_type_id"/>-->
                    <field name="accommodation_type"/>
                    <field name="type"/>
                    <field name="name"/>
                    <field name="total_bedrooms_id"/>
                    <field name="total_bathrooms_id"/>
                    <field name="parking_id"/>
                    <field name="internet_id"/>
                </tree>
            </field>
        </record>

        <record id="action_flatmates" model="ir.actions.act_window">
            <field name="name">HouseMates</field>
            <field name="res_model">flat.mates</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_main_root_flatmates" name="Housemates"
                  web_icon="pragtech_flatmates_system,static/description/flatmats_icon.png" sequence="3"/>
        <menuitem id="submenu_main_flatmates" name="About Property"
                  parent="pragtech_flatmates_system.menu_main_root_flatmates" sequence="1"/>
        <menuitem id="child_menu_flatmates" name="Property" action="action_flatmates"
                  parent="pragtech_flatmates_system.submenu_main_flatmates" sequence="1"/>



        <record model="ir.ui.view" id="view_property_image_form">
        <field name="name">property.image.form</field>
        <field name="model">property.image</field>
        <field name="arch" type="xml">
            <form string="Property Images">
                <div class="row o_website_sale_image_modal">
                    <div class="col-md-6 col-xl-5">
                        <div class="oe_title">
                            <label class="small text-muted" for="name" string="Image Name"/>
                            <h2><field name="name" placeholder="Image Name" required="True"/></h2>
                            <field name="flat_mates_id" invisible="1"/>
                        </div>
                    </div>
                    <div class="col-md-6 col-xl-7 text-center o_website_sale_image_modal_container">
                        <field name="image" widget="image"/>
                    </div>
                </div>
            </form>
        </field>
    </record>


    </data>
</odoo>